<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/Wruczek/Bootstrap-Cookie-Alert@gh-pages/cookiealert.css">
<style>
    .cookiealert {
        background: #f5f5f5 !important;
        border-top: 2px dashed black;
        color: black;
        z-index: 998;
        padding-top: 2rem;
        padding-bottom: 1.5rem;
        text-align: center
    }

    .cookie {
        opacity: 0;
        position: fixed;
        z-index: 999;
        width: 5rem;
        bottom: 3.5rem;
        transform: translateY(100%);
        transition: all 500ms ease-out;
    }

        .cookie.show {
            opacity: 1;
            transform: translateY(0%);
            transition-delay: 1000ms;
        }
</style>
<div class="alert text-center cookiealert" role="alert">
    <text><b>Wahama Shop использует <a href="https://cookiesandyou.com/" target="_blank">куки</a>.</b> Это необходимо для комфортного пользования нашим интернет-магазином.</text>

    <button type="button" class="btn btn-dark  acceptcookies" aria-label="Close">
        Я согласен
    </button>
</div>
<div class="d-flex justify-content-center"><img class="cookie" src="~/images/cookieconsent.png" /></div>


<script>
    /*
     * Bootstrap Cookie Alert by Wruczek
     * https://github.com/Wruczek/Bootstrap-Cookie-Alert
     * Released under MIT license
     */
    /*
 * Bootstrap Cookie Alert by Wruczek
 * https://github.com/Wruczek/Bootstrap-Cookie-Alert
 * Released under MIT license
 */
    (function () {
        "use strict";

        var cookieAlert = document.querySelector(".cookiealert");
        var cookie = document.querySelector(".cookie");
        var acceptCookies = document.querySelector(".acceptcookies");

        if (!cookieAlert) {
            return;
        }

        cookieAlert.offsetHeight; // Force browser to trigger reflow (https://stackoverflow.com/a/39451131)

        // Show the alert if we cant find the "acceptCookies" cookie
        if (!getCookie("acceptCookies")) {
            cookieAlert.classList.add("show");
            cookie.classList.add("show");
        }

        // When clicking on the agree button, create a 1 year
        // cookie to remember user's choice and close the banner
        acceptCookies.addEventListener("click", function () {
            setCookie("acceptCookies", true, 365);
            cookieAlert.classList.remove("show");
            cookie.classList.remove("show");
        });

        // Cookie functions from w3schools
        function setCookie(cname, cvalue, exdays) {
            var d = new Date();
            d.setTime(d.getTime() + (exdays * 24 * 60 * 60 * 1000));
            var expires = "expires=" + d.toUTCString();
            document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
        }

        function getCookie(cname) {
            var name = cname + "=";
            var decodedCookie = decodeURIComponent(document.cookie);
            var ca = decodedCookie.split(';');
            for (var i = 0; i < ca.length; i++) {
                var c = ca[i];
                while (c.charAt(0) === ' ') {
                    c = c.substring(1);
                }
                if (c.indexOf(name) === 0) {
                    return c.substring(name.length, c.length);
                }
            }
            return "";
        }
    })();

</script>

